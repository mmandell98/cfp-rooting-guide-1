{
  "crons": [
    {
      "path": "/api/rankings",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/games",
      "schedule": "0 */3 * * *"
    },
    {
      "path": "/api/teams",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/weeks",
      "schedule": "0 6 * * *"
    }
  ]
}

{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
